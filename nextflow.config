
params {
  bam = "$projectDir/data/jurkat_293t_downsampled_n500_full_bam.bam"
  vcf = "$projectDir/data/jurkat_293t_exons_only.vcf"
  field = "GT"
  demux_tool  = "demuxlet"
  outdir = 'result'
  
}



profiles {

    docker {
        process.container = 'popscle'
        docker.enabled = true
    }


    singular {
        process.container = 'demuxlet_sing'
        singularity {
    		enabled = true
    		runOptions = "--bind $PWD"
	    }
    }

    conda {
		process.conda = '$projectDir/my_env.yml'

    }


}



