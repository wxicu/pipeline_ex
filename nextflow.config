
params {
  demux_tool  = "demuxlet"
  outdir = "result"
  
  bam = "$projectDir/data/jurkat_293t_downsampled_n500_full_bam.bam"
  vcf = "$projectDir/data/jurkat_293t_exons_only.vcf"
  field = "GT"
  geno_error_offset = 0.1
  alpha = 0.5
  alpha_list = 'False'
   
   
  celldata = "$projectDir/data/cells.cellSNP.vcf.gz"
  donorfile = 'NO_FILE'
  forceLearnGT = 'False'
  
}

process {
    withName:demuxlet{
        container = 'popscle'
    }
    withName:vireo {
        container = 'vireo'
    }
}

docker.enabled = true 



